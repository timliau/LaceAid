<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#CCEEEEEE" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_grey"/>
            <corners
                android:radius="50dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#00EEEEEE" />
            <stroke
                android:width="1dp"
                android:color="@color/light_grey"/>
            <corners
                android:radius="50dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
</selector>