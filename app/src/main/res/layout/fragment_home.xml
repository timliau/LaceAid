<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Welcome"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/homeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:paddingBottom="20dp"
            android:text="James B"
            android:textColor="#6BD755"
            android:textSize="36sp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="10dp"
            android:clickable="false"
            app:cardBackgroundColor="#FFDADA"
            app:cardCornerRadius="30dp"
            app:cardElevation="5dp"
            app:cardMaxElevation="3dp"
            app:contentPadding="3dp"
            app:strokeColor="#80FF4949"
            app:strokeWidth="1.5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:text="Click start to\nconnect to your LaceAid" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/eyeicon"
                    android:layout_width="16dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="30dp"
                    app:srcCompat="@drawable/ic_info_svgrepo_com"
                    app:tint="#FF4949" />

                <ImageView
                    android:id="@+id/Find"
                    android:layout_width="57dp"
                    android:layout_height="53dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="45dp"
                    app:srcCompat="@drawable/ic_power_on"
                    app:tint="#FF4949" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:text="Tap to start"
            android:textColor="#000000"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/tighten"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:clickable="true"
            app:cardBackgroundColor="#FFA1A1A1"
            app:cardCornerRadius="90dp"
            tools:ignore="SpeakableTextPresentCheck">

            <androidx.cardview.widget.CardView
                android:id="@+id/tighten2"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:foregroundTint="#FFFFFF"
                app:cardBackgroundColor="#707070"
                app:cardCornerRadius="80dp">

                <ImageView
                    android:id="@+id/shoeicon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_shoe_svgrepo_com"
                    app:tint="#B3FFFFFF" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>