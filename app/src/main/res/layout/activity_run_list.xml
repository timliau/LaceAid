<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunList">

    <TextView
        android:id="@+id/tv_UID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Runs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/runList"
        android:layout_width="409dp"
        android:layout_height="638dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_UID" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10mm"
        tools:layout_editor_absoluteY="537dp">

        <android.widget.Button
            android:id="@+id/addButton"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="2mm"
            android:layout_marginBottom="2mm"
            android:background="@drawable/button_full_rounded"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="Start Workout!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:cornerRadius="50dp" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>