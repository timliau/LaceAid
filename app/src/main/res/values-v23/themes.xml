<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LaceAid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- Customize your theme here. -->
        <!-- Hide title and action bar -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/ToolbarTheme</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/dark_grey</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <item name="android:textColorHighlight">@color/primary_op</item>
    </style>

    <style name="ToolbarTheme" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <!--item name="colorControlNormal">@color/toolbar_color_control_normal</item-->
        <!--item name="android:homeAsUpIndicator">@drawable/back_button_image</item-->
        <item name="spinBars">true</item>
        <item name="color">@color/dark_grey</item>
    </style>
</resources>